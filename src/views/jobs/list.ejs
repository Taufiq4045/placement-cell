<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Available Jobs</title>
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="mb-4">Available Jobs for React/Node.js</h1>
      <div class="list-group">
        <% if (jobs.length > 0) { %> <% jobs.forEach(job => { %>
        <a
          href="<%= job.url %>"
          target="_blank"
          class="list-group-item list-group-item-action"
        >
          <div class="d-flex w-100 justify-content-between">
            <div>
              <h5 class="mb-1"><%= job.title %></h5>
              <p class="mb-1"><%= job.company_name %></p>
              <small><%= job.candidate_required_location %></small>
            </div>
            <div class="text-end">
              <% if (job.salary) { %>
              <p class="mb-1">Salary: <%= job.salary %></p>
              <% } %> <% if (job.publication_date) { %>
              <small
                >Published on: <%= new
                Date(job.publication_date).toLocaleDateString() %></small
              >
              <% } %>
            </div>
          </div>
        </a>
        <% }) %> <% } else { %>
        <p class="text-center">No jobs found</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
