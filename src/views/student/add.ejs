<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h2>Add Student</h2>
      <form action="/api/placementcell/student/add" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            required
          />
        </div>
        <div class="mb-3">
          <label for="college" class="form-label">College</label>
          <input
            type="text"
            class="form-control"
            id="college"
            name="college"
            required
          />
        </div>
        <div class="mb-3">
          <label for="batch" class="form-label">Batch</label>
          <input
            type="text"
            class="form-control"
            id="batch"
            name="batch"
            required
          />
        </div>
        <div class="mb-3">
          <label for="status" class="form-label">Status</label>
          <select class="form-control" id="status" name="status" required>
            <option value="placed">Placed</option>
            <option value="not_placed">Not Placed</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="dsaScore" class="form-label">DSA Score</label>
          <input
            type="number"
            class="form-control"
            id="dsaScore"
            name="dsaScore"
            required
          />
        </div>
        <div class="mb-3">
          <label for="webdScore" class="form-label">WebD Score</label>
          <input
            type="number"
            class="form-control"
            id="webdScore"
            name="webdScore"
            required
          />
        </div>
        <div class="mb-3">
          <label for="reactScore" class="form-label">React Score</label>
          <input
            type="number"
            class="form-control"
            id="reactScore"
            name="reactScore"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Add Student</button>
      </form>
    </div>
  </div>
</div>
